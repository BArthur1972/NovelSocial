<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="550dp"
            app:cardCornerRadius="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_library_book_cover"
                    android:layout_width="207dp"
                    android:layout_height="290dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="51dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="15dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/tv_library_book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_library_book_cover"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="68dp"
                    android:layout_marginTop="68dp"
                    android:layout_marginEnd="68dp"
                    android:text="Title"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_library_book_title"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="50dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_library_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author: "
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_library_author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author"
                        android:textSize="18sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/bt_remove_from_library"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/remove"
                    android:textSize="11sp"
                    app:cornerRadius="15dp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>